<div id="newsfeed">

	<div id="welcome">
		<em><i>Song Feed</i></em>
	</div>


	<div id="songs">
		<% @songs.each do |song| %>
		<a href="<%= song_url(song) %>">
			<div class="song">
				<%= song.artist.name %> - <%= song.title %>
				<div class="song-footer">
					<%= song.annotations.length %> annotations
          <%= link_to "posted by: #{song.user.username}", user_url(song.user),
          {:class => "user-link" }%> 
				</div>
			</div>
		</a>
		<% end %>
	</div>


</div>